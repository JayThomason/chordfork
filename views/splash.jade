extends layout


block content
  div(class='navbar navbar-inverse navbar-fixed-top')
    div(class='navbar-inner')
      div(class='container')
        a(class='brand', href="#") ChordFork
        ul.nav
          li
            a(href="#") explore
          li
            a(href="create") create
  div.container-fluid
    div(class="hero-unit", style="max-width: 600px; text-align: center; margin: auto")
      h2(class="text-center") Welcome to ChordFork.
      p.lead(class="text-center") A tool for songwriters.
      p(class="text-center", style="font-size: 16px;") ChordFork allows you to quickly create song sketches. To test it without an account, go to Create and make a quick post! Go <a href="/about">here</a> to learn more.
    div.row-fluid
      h4(class="text-center", style="color: red") #{error}
      div.span4
      div(class="span2", style="margin-right: 30px")
        form(id="form_login", action="/user/login", method="post", enctype="application/x-www-urlencoded")
            h3 Log In
            input(type="text", name="login_username", class="input-medium", placeholder="user name")
            br
            input(type="password", name="login_password", class="input-medium", placeholder="password")
            br
            button(type="submit", id="login_submit", class="btn btn-success") 
              strong Enter
      div(class="span3")
        form(id="form_create_user", action="/user/create", method="post", enctype="application/x-www-urlencoded")
          div
            h3 Sign Up
          div.control-group
            input(type="text", name="create_username", class="input-medium", placeholder="user name")
          div.control-group
            input(type="password", name="create_password", class="input-medium", placeholder="password")
          div.control-group
            input(type="password", class="input-medium", placeholder="password")
          button(type="submit", id="create_submit", class="btn btn-success")
            strong Create

