extends layout

    
block content
  div(class='navbar navbar-inverse navbar-fixed-top')
    div(class='navbar-inner')
      div(class='container')
        a(class='brand', href="../../splash") ChordFork
        ul(class="nav")
          li
            a(href="/explore") explore
          li
            a(href="../../create") create
  div(class="container-fluid")
    div(style="text-align: center")
      h3 Quick Song 
      h4 by #{owner}
    div(class="well", style="margin: 0 auto; max-width: 500px;")
      h4 Chords
      span(class="display-chords")= chords
